<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jetlin attendance system</title>
    <link rel="stylesheet" href="css/find.css">
    <link rel="stylesheet" href="submit/css/find.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
       <!--1sst section-->
       
        <div class="navbar">
            <div>
                <h2>Attendance System</h2>
            </div>
           
          </div> 
        <div>
            <p>Student Records</p>
        </div>
    <div class="main">
    
 <div class="scol">
        <table>
            <tr>
            <th>Month</th>
            <th>Class</th>
            <th>Atttendance</th>
            <th>Status</th>
            <th>Amount</th>
            <th>Edit</th>
            </tr>
<!--all information about that person-->
<% infos.forEach(function(info){%>


    <tr>
        <td><%=info.month %></td>
        <td><%=info.cls %></td>
        <td><%=info.attendance %></td>
        <td><%=info.fees %></td>
        <td><%=info.amount%></td>
        <td><div class="edit">
            <form action="/findup/<%=info._id%>" method="get">
            <a href="/findup/<%=info._id%>"><i class="fa fa-edit" style="font-size:30px;color:green"></i></a>
            </form>
            <form action="/finddel/<%=info._id%>" method="post">
               <a href="/finddel/<%=info._id%>"> <i class="fa fa-trash" style="font-size:30px;color:red"></i></a>
            </form>
            </div>
        </td>
    </tr>
<%})%>

        </table>
    </div>
    
    </div>
    <div class="fot">&copy;<h5>Jetlin Karkha&Co.2024</h5></div>
    <script src="js/index.js"></script>
</body>
</html>